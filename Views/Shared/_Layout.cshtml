<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Khairunnesa Nursing College Portal</title>

    <!-- Favicon and Touch Icon -->
    <link rel="apple-touch-icon" sizes="76x76" href="~/img/logo.png">
    <link rel="icon" type="image/png" href="~/img/logo.png">

    <!-- Google Fonts & Material Icons -->
    <link href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />

    <!-- CSS Files -->
    <link href="~/Content/material-dashboard/css/material-dashboard.css?v=2.1.2" rel="stylesheet">
    <link href="~/css/nucleo-icons.css" rel="stylesheet">
    <link href="~/css/nucleo-svg.css" rel="stylesheet">
    <link href="~/css/material-dashboard.css?v=3.2.0" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
</head>

<body class="g-sidenav-show bg-gray-100">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-radius-lg fixed-start ms-2 bg-white my-2" id="sidenav-main">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-dark opacity-5 position-absolute end-0 top-0 d-xl-none" id="iconSidenav"></i>
            <a class="navbar-brand px-4 py-3 m-0" href="#">
                <img src="~/img/logo.png" class="navbar-brand-img" width="26" height="26" alt="main_logo">
                <span class="ms-1 text-sm text-dark">KNC</span>
            </a>
        </div>
        <hr class="horizontal dark mt-0 mb-2">
        <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a data-bs-toggle="collapse" href="#submenu" class="nav-link text-dark">
                        <i class="material-symbols-rounded opacity-5">school</i>
                        <span class="nav-link-text ms-1">Academics</span>
                    </a>
                    <div class="collapse" id="submenu">
                        <ul class="navbar-nav ms-4 ps-3">
                            <li class="nav-item">@Html.ActionLink("Students", "Index", "Students", null, new { @class = "nav-link text-dark" })</li>
                            <li class="nav-item">@Html.ActionLink("Faculty", "Index", "Faculties", null, new { @class = "nav-link text-dark" })</li>
                            <li class="nav-item">@Html.ActionLink("Courses", "Index", "Courses", null, new { @class = "nav-link text-dark" })</li>
                            <li class="nav-item">@Html.ActionLink("Designation", "Index", "Designations", null, new { @class = "nav-link text-dark" })</li>
                            <li class="nav-item">@Html.ActionLink("Payment", "Index", "PaymentInfos", null, new { @class = "nav-link text-dark" })</li>
                            <li class="nav-item">@Html.ActionLink("Session", "Index", "Sessions", null, new { @class = "nav-link text-dark" })</li>
                            <li class="nav-item">@Html.ActionLink("Programs", "Index", "EducationPrograms", null, new { @class = "nav-link text-dark" })</li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </aside>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <!-- Navbar -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-3 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
            <div class="container-fluid py-1 px-3">
                @{
                    var names = new Dictionary<string, string> {
                        { "Home", "Dashboard" },
                        { "Customer", "Client Management" },
                        { "Create", "Add New" },
                        // Add more as needed
                    };

                    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
                    var action = ViewContext.RouteData.Values["action"]?.ToString();
                }

                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm">
                        <a class="opacity-5 text-dark" href="@Url.Action("Index", controller)">
                            @(names.ContainsKey(controller) ? names[controller] : controller)
                        </a>
                    </li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">
                        @(names.ContainsKey(action) ? names[action] : action)
                    </li>
                </ol>

                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                        <div class="input-group input-group-outline">
                            <label class="form-label">Type here...</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <ul class="navbar-nav d-flex align-items-center justify-content-end">
                        <li class="nav-item d-flex align-items-center">
                            <a class="btn btn-outline-primary btn-sm mb-0 me-3" href="#">Online Builder</a>
                        </li>
                        <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                            <a href="#" class="nav-link text-body p-0" id="iconNavbarSidenav">
                                <div class="sidenav-toggler-inner">
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item px-3 d-flex align-items-center">
                            <a href="#" class="nav-link text-body p-0">
                                <i class="material-symbols-rounded">settings</i>
                            </a>
                        </li>
                        <li class="nav-item d-flex align-items-center">
                            <a href="#" class="nav-link text-body font-weight-bold px-0">
                                <i class="material-symbols-rounded">account_circle</i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->

        <div class="container-fluid py-2">
            @RenderBody()
        </div>

        <footer class="footer py-4">
            <div class="container-fluid">
                <div class="row align-items-end justify-content-lg-between">
                    <div class="col-lg-6 mb-lg-0 mb-4">
                        <p class="mb-0 text-sm-end text-sm text-muted">
                            © 2025 Khairunnesa Nursing College
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="~/Content/material-dashboard/js/core/popper.min.js"></script>
    <script src="~/Content/material-dashboard/js/core/bootstrap.min.js"></script>
    <script src="~/Content/material-dashboard/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/Content/material-dashboard/js/plugins/smooth-scrollbar.min.js"></script>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script src="~/Content/material-dashboard/js/material-dashboard.min.js?v=3.2.0"></script>
    <script src="~/Content/material-dashboard/js/core/jquery.min.js"></script>
    <script src="~/Content/material-dashboard/js/core/bootstrap-material-design.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>
    <!-- Github buttons -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/material")
    @RenderSection("Scripts", required: false)
</body>

</html>

@model IEnumerable<KNC.ViewModels.FeeStructureViewModel>

@{
    ViewBag.Title = "Fee Structures";
}

<h2>Fee Structures</h2>

<p>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showCreateModal()">Create New</button>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Program ID</th>
            <th>Amount</th>
            <th>Year</th>
            <th>Description</th>
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProgramID</td>
                <td>@item.Amount</td>
                <td>@item.Year</td>
                <td>@item.Description</td>
                <td>
                    <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showDetailsModal(@item.FeeStructureID)">Details</button>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showEditModal(@item.FeeStructureID)">Edit</button>
                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showDeleteModal(@item.FeeStructureID)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
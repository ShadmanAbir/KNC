@model IEnumerable<KNC.ViewModels.CourseTeacherAssignmentViewModel>

@{
    ViewBag.Title = "Course Teacher Assignments";
}

<h2>Course Teacher Assignments</h2>

<p>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showCreateModal()">Create New</button>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Program Course ID</th>
            <th>Faculty ID</th>
            <th>Remarks</th>
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProgramCourseID</td>
                <td>@item.FacultyID</td>
                <td>@item.Remarks</td>
                <td>
                    <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showDetailsModal(@item.AssignmentID)">Details</button>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showEditModal(@item.AssignmentID)">Edit</button>
                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showDeleteModal(@item.AssignmentID)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
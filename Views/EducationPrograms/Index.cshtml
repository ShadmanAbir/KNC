@model IEnumerable<KNC.Models.EducationPrograms>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProgramName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProgramName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EducationProgramID }) |
            @Html.ActionLink("Details", "Details", new { id=item.EducationProgramID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EducationProgramID })
        </td>
    </tr>
}

</table>

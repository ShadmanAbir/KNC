@model IEnumerable<KNC.ViewModels.StudentEnrollmentViewModel>

@{
    ViewBag.Title = "Student Enrollments";
}

<h2>Student Enrollments</h2>

<p>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showCreateModal()">Create New</button>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Program Course ID</th>
            <th>Academic Year</th>
            <th>Enrollment Date</th>
            <th>Remarks</th>
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProgramCourseID</td>
                <td>@item.AcademicYear</td>
                <td>@item.EnrollmentDate.ToShortDateString()</td>
                <td>@item.Remarks</td>
                <td>
                    <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showDetailsModal(@item.StudentID)">Details</button>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showEditModal(@item.StudentID)">Edit</button>
                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showDeleteModal(@item.StudentID)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
@model IEnumerable<KNC.ViewModels.EducationProgramsViewModel>

@{
    ViewBag.Title = "Education Programs";
}

<h2>Education Programs</h2>

<p>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showCreateModal()">Create New</button>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Program Name</th>
            <th>Duration (Years)</th>
            <th>Description</th>
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProgramName</td>
                <td>@item.DurationInYears</td>
                <td>@item.Description</td>
                <td>
                    <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showDetailsModal(@item.ProgramID)">Details</button>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showEditModal(@item.ProgramID)">Edit</button>
                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalForm" onclick="showDeleteModal(@item.ProgramID)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>